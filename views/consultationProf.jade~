script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")

div 
      h1 Consulter un professionnel
      a(href='/modificationProf/' + "#{id}") Modification 
      br
      label(for='specialite') specialite:&nbsp;
      input(type="text", id="specialite", disabled)
      br
      label(for='nom') nom:&nbsp;
      input(type="text", id="nom", disabled)
      br
      label(for='prenom') prenom:&nbsp;
      input(type="text", id="prenom", disabled)
      br
      label(for='sexe') sexe:&nbsp;
      <label><input type="radio" name="sexe" value="1" id="Homme">Homme</label>
      <label><input type="radio" name="sexe" value="2" id="Femme">Femme</label>
      br
      label(for='patient') nombre de patient:&nbsp;
      input(type="text", id="patient", disabled)
      br
      label(for='patient') nombre de visite:&nbsp;
      input(type="text", id="visite", disabled)    
      br
      br
      table(id="patients")
       thead
        tr: th Patient
       tbody
     


script.
  var ajouter = function (data){
  $("#nom").val(data.nom);
  $("#prenom").val(data.prenom);
  $("#specialite").val(data.specialite);
  var $radios = $('input:radio[name=sexe]');
  $radios.filter('[value='+data.sexe+']').prop('checked', true);
  
  $("#patient").val(data.nombrePatient);
  $("#visite").val(data.nombreVisite);	
  var htmlAAjouter="";
  data.listePatients2014.forEach(function(item){
  htmlAAjouter= htmlAAjouter + "<tr><td>" + item.nom + " " +item.prenom + "</td></tr>";
  });
  $('#patients > tbody:last').append("<tr><td>"+htmlAAjouter+"</td></tr>");

  }
  
  $.ajax({
   dataType:"json",
   type: "GET",
   url: "/pros/" + "#{id}",
   statusCode: {
    400: function() {
      alert('Id format non vabalable');
    },
    500: function() {
      alert('Erreur serveur');
    },
    204: function() {
      alert('Aucun professionnel trouv√©');
    },
    200: function(data) {
      ajouter(data);
    }
   }
  });
 
